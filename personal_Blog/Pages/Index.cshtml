@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>blog</title>
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
</head>
<body>
    <div class="banner">
        <div class="navbar">
            <img src="/images/logo_2.jpg" class="logo" alt="">
        </div>
        <div class="content">
            <h1>FIND YOUR HOME</h1>
            <p>Here you can find the details of your dream home <br>(Avenue, district, street, contact number)</p>
            <div>
                <form method="post">
                    <button type="submit" asp-page-handler="GoAsClient">
                        <span></span>I am a customer
                    </button> 

                    <button type="submit" asp-page-handler="GoAsSeller">
                        <span></span>I am a seller
                    </button>
                </form>
            </div>
        </div>
    </div>

</body>
</html>

